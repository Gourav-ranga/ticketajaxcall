package com.ticket.spring.controller;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.ws.rs.core.Response;

import org.apache.log4j.Logger;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.ticket.spring.model.TicketOption;
import com.ticket.spring.service.TicketService;

@Controller
public class TicketController 
{
	
	Logger logger=Logger.getLogger(TicketController.class);
	
	@Autowired
	private TicketService ticketservice; 
	
	@RequestMapping(value="/")
	public String home() 
	{
		logger.info("Working");
		System.out.println("It's Working ?");
		return "home";
	}
	
	@RequestMapping(value="/displayresult" , method=RequestMethod.POST)
	public Response ticketResult(TicketOption toption,HttpServletRequest request,HttpServletResponse response)
	{
		
		
		String data = request.getParameter("ticketoption").trim();
		
		toption.setTicketoption(data);
		logger.info("Ticket value : "+data);
		logger.info("In TicketController");
		
		return ticketservice.getTicketOption(toption) ; 
	}

}